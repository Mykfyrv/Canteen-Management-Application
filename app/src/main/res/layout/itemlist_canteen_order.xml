<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--    app:cardElevation="5dp"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEDBD0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:text="Date"
                    android:textColor="#442C2E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/m_image"
                android:layout_width="241dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextName"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CName"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextFName"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Menu:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textFName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FName"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextOrder"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Order:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextQuantity"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Quantity:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextPrice"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTextTableNo"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Table No:"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textTableNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Table No"
                        android:textColor="#442C2E"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#442C2E"
                android:drawableLeft="@drawable/ic_ready"
                android:drawableTint="#F8F5F5"
                android:text="Ready" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#442C2E"
                android:drawableLeft="@drawable/ic_confirm"
                android:drawableTint="#FFFDFD"
                android:text="Confirm" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#FFFFFF" />

    </LinearLayout>



    <TextView
        android:id="@+id/textImageUrl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        tools:visibility="gone" />


</androidx.cardview.widget.CardView>